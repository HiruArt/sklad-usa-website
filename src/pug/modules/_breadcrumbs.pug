.breadcrumbs
  .breadcrumbs__inner.site-container
    .breadcrumbs__list
      .breadcrumbs__item
        span
          a(href="/").breadcrumbs__link Головна
      if (pageSection === "services")
        .breadcrumbs__item
          span
            a(href="./" + (pageActive) + ".html").breadcrumbs__link Послуги
      if (pageSection === "blog")
        .breadcrumbs__item
          span
            a(href="./" + (pageActive) + ".html").breadcrumbs__link Блог
      .breadcrumbs__item
        span.breadcrumbs__link #{pageName}
