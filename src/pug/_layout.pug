//include _mixins

block vars

doctype html
html(lang="ru")
	head
		meta(charset="utf-8")
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name="viewport" content="initial-scale=1.0, width=device-width")
		title SkladUSA website
		meta(name="description", content='description content')

		//favicon
		link(rel="icon" href="./img/favicon/favicon.ico" type="image/x-icon")

		link(rel='stylesheet', href='./css/main.css')
		if (pageClass === "homepage")
			link(rel='stylesheet', href='./css/homepage.css')

		link(rel="preload" href="./fonts/FuturaBookC.woff2" as="font" type="font/woff2" crossorigin)
		link(rel="preload" href="./fonts/FuturaMediumC.woff2" as="font" type="font/woff2" crossorigin)



	body(class="page " + pageClass)
		.page__wrapper
			include modules/_header

			main.page__content
				block content

			include modules/_footer
		block scripts
			script(src='./js/libs/jquery.js')
			script(src='./js/main.js')

