    .l-media-r-info.instruction
      .l-media-r-info__inner.site-container.site-container--section.double-block
        .l-media-r-info__media.left-block.left-media
          .l-media-r-info__media-img
            img(src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="./img/instruction-img.svg" alt="image" width="491").lazyload

        .l-media-r-info__content.grid-padding.right-block
